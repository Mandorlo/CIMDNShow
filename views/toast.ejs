<div id="toast_msg" class="mdl-js-snackbar mdl-snackbar">
  <div class="mdl-snackbar__text"></div>
  <button class="mdl-snackbar__action" type="button"></button>
</div>

<script>
  function toast(msg) {
    var data = {
      message: msg
    };
    $("#toast_msg")[0].MaterialSnackbar.showSnackbar(data);
  }
</script>
